@model TaskEditViewModel


<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                % Completed
            </th>
            <th>
                Budget
            </th>
            <th>
                Start Date
            </th>
            <th>
                Estimated End Date
            </th>
            <th></th>
            

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Activities) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrcCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedEndDate)
            </td>
            
            
            <td>
                <input type="button" class="btn-sm btn-primary" title="Open" value="Open" onclick="location.href='@Url.Action("Edit","Activities", new {id=item.ID})'" />

            
            <td>
                <input type="button" class="btn-sm btn-danger" title="Delete" value="Delete" onclick="location.href='@Url.Action("Delete","Activities", new {id=item.ID})'" />
            </td>
            
        </tr>
}
    </tbody>
</table>

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContext
@{
}


@if (httpContext.HttpContext.User.IsInRole("Admin"))
{
    <partial name="/Views/Shared/AdminDashboard.cshtml" />
}
else if (httpContext.HttpContext.User.IsInRole("ProjectManager"))
{
    <partial name="/Views/Shared/ManagerDashboard.cshtml" />
}
else
{
    <partial name="/Views/Shared/UserDashboard.cshtml" />
}
